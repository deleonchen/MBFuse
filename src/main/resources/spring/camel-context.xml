<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd        http://camel.apache.org/schema/spring       http://camel.apache.org/schema/spring/camel-spring.xsd">
    <bean class="org.apache.activemq.camel.component.ActiveMQComponent" id="activemq">
        <property name="connectionFactory">
            <bean class="org.apache.activemq.ActiveMQConnectionFactory">
                <property name="brokerURL" value="tcp://activemq.activemq-mq:61616"/>
                <property name="userName" value="admin"/>
                <property name="password" value="admin"/>
            </bean>
        </property>
    </bean>
    <camelContext id="camel" xmlns="http://camel.apache.org/schema/spring">
        <route id="myone-route">
            <from id="_to3" uri="activemq:queue:getWaterOrder.q01.req.01?jmsMessageType=Bytes&amp;testConnectionOnStartup=true&amp;exchangePattern=InOnly"/>
            <log id="route-log" message=">Sending>> ${body}"/>
            <setHeader headerName="Content-Type" id="_setHeader1">
                <constant>application/json</constant>
            </setHeader>
            <to id="_to1" pattern="InOut" uri="restlet:http://istio-ingressgateway-istio-system.tccluster-sng01-b3c8x32-57124d23d25ef78fd339de58d690b0f5-0000.sng01.containers.appdomain.cloud:80/getWaterOrder?restletMethod=POST&amp;exchangePattern=InOut"/>
            <log id="_log1" message="Received >>> ${body}"/>
            <setHeader headerName="transactionid" id="_setHeader2">
                <jsonpath>$.Header.transactionId</jsonpath>
            </setHeader>
            <log id="_log2" message="Received header body >>> ${body}"/>
            <to id="_to2" uri="activemq:queue:getWaterOrder.q01.rpl.01"/>
        </route>
    </camelContext>
</beans>
